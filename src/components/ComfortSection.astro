---
import { Image } from "astro:assets";
import Taija from "../assets/taija.png";
import Vondra from "../assets/vondra.png";
import WaitlistModal from "../components/modals/WaitlistModal.astro";
import FadeIn from "./FadeInWrapper";
---

<div class="relative w-full h-auto bg-white md:h-auto py-16">
  <div class="flex flex-col justify-center items-center space-y-12">
    <!-- Text Section -->
    <section
      class="flex flex-col items-center gap-6 tracking-tight text-center px-4"
    >
      <FadeIn client:load duration={150}>
        <h1
          class="text-[35px] font-medium leading-[45px] tracking-tight md:text-[58px] md:leading-[65px]"
        >
          Find the comfort in home finding.
        </h1>
      </FadeIn>
      <FadeIn client:load duration={200}>
        <p class="text-[16px] text-[#A3A3A3] md:text-[24px] max-w-[600px]">
          Find your choices based on color,<br class="md:hidden" />
          ambience and residency, with lower<br class="md:hidden" />
          budget and easier systems at your<br class="md:hidden" />
          doorstep.
        </p>
      </FadeIn>
      <FadeIn client:load duration={250}>
        <button
          id="openModal"
          class="w-[170px] mt-6 h-[42px] text-white bg-black text-center"
        >
          Join the waitlist
        </button>
      </FadeIn>

      <WaitlistModal />
    </section>

    <!-- Images -->
    <div
      class="w-full px-4 py-10 flex flex-col items-center md:flex-row md:justify-center md:gap-28"
    >
    <FadeIn client:load duration={500}>
      <div
        class="relative w-[300px] h-[380px] md:w-[350px] md:h-[450px] overflow-hidden md:translate-y-10"
      >
        <Image
          src={Vondra}
          alt="Annas lodge"
          class="w-full h-full object-cover"
        />
        <div class="absolute top-4 left-4 text-white">
          <h2 class="text-lg font-semibold">Annas lodge</h2>
          <p class="text-sm">Johannesburg, South African</p>
        </div>
      </div>
    </FadeIn>

      <!-- Card 2: Higher on desktop -->
       <FadeIn client:load duration={250}>
         <div
           class="relative w-[300px] h-[380px] md:w-[350px] md:h-[450px] overflow-hidden mt-8 md:mt-0 md:-translate-y-5"
         >
           <Image
             src={Taija}
             alt="Taji palace"
             class="w-full h-full object-cover"
           />
           <div class="absolute top-4 left-4 text-white">
             <h2 class="text-lg font-semibold">Taji palace</h2>
             <p class="text-sm">Kolkata, India</p>
           </div>
         </div>
       </FadeIn>
    </div>
  </div>
</div>

<script is:inline>
  const openBtn = document.getElementById("openModal");
  const closeBtn = document.getElementById("closeModal");
  const modal = document.getElementById("modal");

  openBtn?.addEventListener("click", () => modal.classList.remove("hidden"));
  closeBtn?.addEventListener("click", () => modal.classList.add("hidden"));
</script>
